<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.jcpdev.board.dao.ClientMapper">
	<select id="selectAll" resultType="Client" > 
		select * from client
	</select>
	
	<select id="selectOne" resultType="Customer" parameterType="int">
		select client_id,client_email,client_name,client_address,client_gender,client_birth,client_tall,client_img,client_instruction,client_info 
		from client where id=#{id}
	</select>
	
	<insert id="insert" parameterType="Customer" keyColumn="idx" keyProperty="idx">
	<!-- insert 후에 자동증가컬럼값 가져오기 : useGeneratedKeys="true" 
		  데이터베이스에서 자동증가 컬럼 keyColumn,  매핑되는 dto 클래스의 변수명 keyProperty-->
		insert into customer_1(name,password,email,addr,gender,age,hobby)
		values (#{name},sha2(#{password},256),#{email},#{addr},#{gender},#{age},#{hobby})
	</insert>
	<!-- 파라미터: 실행에 필요한 데이터. #{ } 기호로 표시. resultType: 실행 후 리턴되는 데이터 타입.-->
	<update id="update" parameterType="Customer">
	update customer_1 set email=#{email},addr=#{addr},hobby=#{hobby} where idx=#{idx}
	</update>
	<delete id="delete" parameterType="int" >
	delete from customer_1 where idx=#{idx}
	</delete>
	
	<select id="login" parameterType="Customer" resultType="Customer">
		select  idx,email,name,gender,hobby,age,addr from customer_1 where email=#{email} and password=sha2(#{password},256)
	</select>
</mapper>







