create table Client (
   Client_id varchar(20) primary key,
   Client_password varchar(30) not null,
   Client_email varchar(30) not null,
   Client_name varchar(20) not null,
   Client_address varchar(100) not null,
  Client_gender varchar(1) check (Client_gender in('M','F')),
   Client_birth varchar(50) not null,
   Client_tall int(3) not null,
   Client_img varchar(50) not null,
   Client_instruction varchar(200) not null,
   Client_info varchar(200) not null
);


create table Whiteboard (
	Whiteboard_no int auto_increment primary key,
	Whiteboard_id varchar(20) not null,
	Whiteboard_img1 varchar(200) not null,
	Whiteboard_img2 varchar(200),
	Whiteboard_img3 varchar(200),
	Whiteboard_content varchar(200) not null,
	Whiteboard_date datetime default CURRENT_TIMESTAMP,
	Whiteboard_count SMALLINT DEFAULT '0',
	Whiteboard_like SMALLINT DEFAULT '0'
);


create table Comment (
   Commentboard_no int not null,
   Comment_no int auto_increment primary key,
   Comment_id varchar(20) not null,
   Comment_content varchar(200) not null
);

create table Report (
   Report_no int auto_increment primary key,
   Reportboard_no int not null,
   Report_id varchar(20) not null,
   Report_content varchar(200) not null
);

create table Follow (
   Follow_no int auto_increment primary key,
   Follow_id varchar(20) not null,
   Following_id varchar(20) not null
);

ALTER TABLE Comment ADD FOREIGN KEY (Commentboard_no) REFERENCES Whiteboard(Whiteboard_no);
ALTER TABLE Comment ADD FOREIGN KEY (Comment_id) REFERENCES Client(Client_id);
ALTER TABLE Report ADD FOREIGN KEY (Reportboard_no) REFERENCES Whiteboard(Whiteboard_no);
ALTER TABLE Report ADD FOREIGN KEY (Report_id) REFERENCES Client(Client_id);
ALTER TABLE Follow ADD FOREIGN KEY (Follow_id) REFERENCES Client(Client_id);
ALTER TABLE Follow ADD FOREIGN KEY (Following_id) REFERENCES Client(Client_id);




